<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SettingsApplication.ViewModels"
        xmlns:views="clr-namespace:SettingsApplication.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SettingsApplication.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SettingsApplication">

  <TabControl>
    <TabItem Header="Выбор файла и папки">
      <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <TextBlock>Файл</TextBlock>
        <TextBox Watermark="Напишите путь до файла" Name="pathToFileBox"></TextBox>
        <Button
          Click="ChooseFileOnClickCommand"
          Content="Выбор файла" IsEnabled="True"/>
        <TextBlock>Папка</TextBlock>
        <TextBox Watermark="Напишите путь до папки" Name="pathToFolderBox" ></TextBox>
        <Button
          Click="ChooseFolderOnClickCommand"
          Content="Выбор папки" IsEnabled="True"/>
      </StackPanel>
    </TabItem>
  </TabControl>
</Window>
