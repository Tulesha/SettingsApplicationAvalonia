<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SettingsApplication.ViewModels"
        xmlns:views="clr-namespace:SettingsApplication.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SettingsApplication.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SettingsApplication">

  <TabControl>
    <TabItem Header="Settings1" VerticalContentAlignment="Center">
      <StackPanel VerticalAlignment="Center">
        <TextBox Watermark="Write path to file" Name="pathToFileBox"></TextBox>
        <Button
          Click="ChooseFileOnClickCommand"
          Content="Choose File" IsEnabled="True"/>
      </StackPanel>
    </TabItem>
    <TabItem Header="Settings2" VerticalContentAlignment="Center">
      <StackPanel VerticalAlignment="Center">
        <ContextMenu>
          <MenuItem Header="Page"/>
          <MenuItem Header="Page"/>
          <MenuItem Header="Page"/>
        </ContextMenu>
      </StackPanel>
    </TabItem>
  </TabControl>
</Window>
